<a>all blogs will go here</a>

<ol class="blog-list">
  {{#each blogs as |blog|}}
  <li>
    {{!-- pull in html from blog-info.handlebars --}}
    <article class="blog">
  <div class="title">
    <a href="{{blog_comment}}" target="_blank">{{title}}</a>
    {{!-- <span>({{format_url blog_url}})</span> --}}
  </div>
  <div class="meta">
{{!-- executes like passing args into a function: format_plural("point",vote_count) --}}
    {{!-- {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on {{format_date created_at}} --}}
    |
      <a href="/blog/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>
  </li>
  {{/each}}
</ol>


