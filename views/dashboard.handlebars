{{#if loggedIn}}

  <a>Welcome to your dashboard!</a>

  <section class="new_blog">
    <h2>Create New Blog</h2>

    <form class="new-blog-form">
      <div>
        <label for="blog_title">Title</label>
        <input type="text" id="blog_title" name="blog_title" />
      </div>
      <div>
        <label for="blog_content">Text</label>
        <input id="blog_content" name="blog_content" />
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </section>

  
{{/if}}
  <script src="/javascript/add-blog.js"></script>
